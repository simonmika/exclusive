{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "build",
			"args": ["run", "build"],
			"problemMatcher": [
				{
					"owner": "webpack",
					"severity": "error",
					"fileLocation": ["relative", "${workspaceRoot}/source"], 
					"pattern": [
						{
							"regexp": "ERROR in (.*)",	
							"file" : 1 
						},
						{
							"regexp": "\\((\\d+),(\\d+)\\):(.*)",
							"line":1,
							"column": 2,
							"message": 3
						}
					]
				},
				{
				"owner": "webpack",
				"severity": "error",
				"fileLocation": ["relative", "${workspaceRoot}/"], 
				"pattern": [
					{
						"regexp": "(.*)\\(([0-9]+),([0-9]+)\\): (error|warning) (TS[0-9][0-9][0-9][0-9]): (.*).",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"code": 5,
						"message": 6
					}
				]
			}
			]
		},
		{
			"taskName": "build-server",
			"isBuildCommand": true,
			"args": ["run", "build-server"],
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": ["relative", "${workspaceRoot}/"], 
				"pattern": [
					{
						"regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(TS[0-9][0-9][0-9][0-9]):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"code": 5,
						"message": 6
					}
				]
			}
		},
		{
			"taskName": "watch-server",
			"args": ["run", "watch-server"],
			"isWatching": true,
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": ["relative", "${workspaceRoot}/"], 
				"pattern": [
					{
						"regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+(TS[0-9][0-9][0-9][0-9]):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"code": 5,
						"message": 6
					}
				]
			}
		},
		{
			"taskName": "build-client",
			"args": ["run", "build-client"],
			"problemMatcher": {
				"owner": "webpack",
				"severity": "error",
				"fileLocation": ["relative", "${workspaceRoot}/source"], 
				"pattern": [
					{
						"regexp": "ERROR in (.*)",	
						"file" : 1 
					},
					{
						"regexp": "\\((\\d+),(\\d+)\\):(.*)",
						"line":1,
						"column": 2,
						"message": 3
					}
				]
			}
		},
		{
			"taskName": "start",
			"args": ["run", "start"]
		},
		{
			"taskName": "start-server",
			"args": ["run", "start-server"]
		},
		{
			"taskName": "start-client",
			"args": ["run", "start-client"]
		},
		{
			"taskName": "install",
			"args": ["install"]
		},
		{
			"taskName": "update",
			"args": ["update"]
		},
		{
			"taskName": "test",
			"args": ["run", "test"]
		}
	]
}
